#include <iostream>
#include <string>

using namespace std;

class Person
{
public:
  Person():age(3),sex('Å®'),score(60)
  {}

  ~Person(){}
private:
  string name;

protected:
  int age;

public:
  char sex;

  int score;
};



class Student:public Person
{

public:
 void showInfo()
  {
    int age = this->age;

    char sex = this->sex;

    int score = this->score;

    cout<<age<<"  "<<sex<<"  "<<score<<endl;

  }

};

class Teacher:public Student
{

public:
 void showInfo()
  {
    int age = this->age;

    char sex = this->sex;

    int score = this->score;

    cout<<age<<"  "<<sex<<"  "<<score<<endl;

  }

};



class Proffessionner:public  Teacher
